@{
}

<div align="center" style="padding-bottom:20px;">
    <a asp-controller="Game" asp-action="Create" class="btn btn-primary btn-md">New Game</a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="row">
            <th scope="col" class="col-lg-3">Name</th>
            <th scope="col" class="col-lg-3">Mods</th>
            <th scope="col" class="col-lg-3">Downloads</th>
            <th scope="col" class="col-lg-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
        <tr class="row">
            <td class="col-lg-3">@game.Name</td>
            <td class="col-lg-3">@game.ModCount</td>
            <td class="col-lg-3">@game.TotalDownloadCount</td>
            <td class="col-lg-2">
                <div class="button-holder">
                    <a asp-controller="Game" asp-action="Edit" asp-route-id="@game.Id" class="btn btn-primary btn-md">Edit</a>
                    <a href="/Carts/AddProduct?productId=@game.Id" class="btn btn-outline-primary">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>